<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".ui.camera.CameraFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="QR Scanner"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/navHistory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_circle_glass"
        android:padding="12dp"
        android:src="@drawable/ic_nav_history"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/ivScanFrame"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_scan_frame_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:id="@+id/scanLine"
        android:layout_width="260dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_scan_line"
        app:layout_constraintEnd_toEndOf="@id/ivScanFrame"
        app:layout_constraintStart_toStartOf="@id/ivScanFrame"
        app:layout_constraintTop_toTopOf="@id/ivScanFrame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Position QR code within the frame"
        android:textColor="@color/text_hint"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivScanFrame" />

    <LinearLayout
        android:id="@+id/layoutCenterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnScanTrigger"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_circle_purple_gradient"
            android:elevation="8dp"
            android:padding="18dp"
            android:src="@drawable/bg_rounded_button"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tap to scan"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnFlash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_circle_glass"
        android:padding="12dp"
        android:src="@drawable/ic_flashlight"
        app:layout_constraintBottom_toBottomOf="@+id/layoutCenterBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/layoutCenterBtn"
        app:layout_constraintTop_toTopOf="@+id/layoutCenterBtn"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>